@page "/tickets"
@rendermode InteractiveServer
@inject TicketService TicketService
@using TicketTracker.Data
@using TicketTracker.Services

<h3>ðŸŽ« Ticket Tracker</h3>

<button class="btn btn-primary mb-3" @onclick="AddTicket">Add Ticket</button>
<div class="row mb-3">
    <div class="col">
        <input class="form-control" placeholder="Search title or description..."
               @bind="SearchQuery" @bind:event="oninput" />
    </div>
    <div class="col-auto">
        <select class="form-select" @bind="StatusFilter">
            <option>All</option>
            <option>Open</option>
            <option>In Progress</option>
            <option>Resolved</option>
            <option>Closed</option>
        </select>
    </div>
    <div class="col-auto">
        <button class="btn btn-outline-secondary" @onclick="ClearFilters">Clear</button>
    </div>
</div>

@code {
    private string searchQuery = string.Empty;
    private string statusFilter = "All";

    private string SearchQuery
    {
        get => searchQuery;
        set
        {
            if (searchQuery == value) return;
            searchQuery = value;
            _ = ApplyFilterAsync();
        }
    }

    private string StatusFilter
    {
        get => statusFilter;
        set
        {
            if (statusFilter == value) return;
            statusFilter = value;
            _ = ApplyFilterAsync();
        }
    }

    private async Task ApplyFilterAsync()
    {
        // Always fetch fresh data to avoid stale results after CRUD operations
        var all = await TicketService.GetAllAsync();
        tickets = all
            .Where(t =>
                (string.IsNullOrWhiteSpace(SearchQuery)
                    || (t.Title?.IndexOf(SearchQuery, StringComparison.OrdinalIgnoreCase) >= 0)
                    || (t.Description?.IndexOf(SearchQuery, StringComparison.OrdinalIgnoreCase) >= 0))
                && (StatusFilter == "All" || t.Status == StatusFilter))
            .ToList();

        StateHasChanged();
    }

    private Task ClearFilters()
    {
        SearchQuery = string.Empty;
        StatusFilter = "All";
        return Task.CompletedTask;
    }
}
@if (tickets == null)
{
    <p><em>Loading...</em></p>
}
else if (!tickets.Any())
{
    <p>No tickets found.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Status</th>
                <th>Created</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var t in tickets)
            {
                <tr>
                    <td>@t.Title</td>
                    <td>@t.Status</td>
                    <td>@t.CreatedAt.ToShortDateString()</td>
                    <td>
                        <button class="btn btn-sm btn-success" @onclick="() => NextStatus(t)">Next</button>
                        <button class="btn btn-sm btn-danger" @onclick="() => Delete(t.Id)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Ticket>? tickets;

    protected override async Task OnInitializedAsync()
    {
        tickets = await TicketService.GetAllAsync();
        Console.WriteLine("Tickets loaded: " + tickets.Count);
    }

    private async Task AddTicket()
    {
        var newTicket = new Ticket { Title = "New Ticket", Description = "Issue details" };
        await TicketService.AddAsync(newTicket);
        tickets = await TicketService.GetAllAsync();
    }

    private async Task NextStatus(Ticket ticket)
    {
        ticket.Status = ticket.Status switch
        {
            "Open" => "In Progress",
            "In Progress" => "Resolved",
            "Resolved" => "Closed",
            _ => "Open"
        };
        await TicketService.UpdateAsync(ticket);
        tickets = await TicketService.GetAllAsync();
    }

    private async Task Delete(int id)
    {
        await TicketService.DeleteAsync(id);
        tickets = await TicketService.GetAllAsync();
    }
}
